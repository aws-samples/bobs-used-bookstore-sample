@model Bookstore.Web.ViewModel.Home.HomeIndexViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- Welcome Section -->
<div class="row align-items-center my-5">
    <div class="col-md-6">
        <img src="/images/register.jpg" class="img-fluid rounded" alt="Welcome Image">
    </div>
    <div class="col-md-6">
        <h2 class="mb-4">Welcome!</h2>
        <p class="mb-3">
            Welcome to Bob's Used Books, your online destination for finding great deals on pre-loved books of all genres and topics.
            Whether you're looking for a classic novel, a rare edition, a textbook, or a cookbook, you'll find it here.
        </p>
        <p class="mb-3">You can also sell your own books to us and earn some extra cash. At Bob's Used Books, we believe that every book deserves a second chance.</p>
        <p class="mb-4">Shop with us today and discover the joy of reading!</p>
        <a class="btn btn-primary" asp-area="" asp-controller="Search" asp-action="Index">Shop Books</a>
    </div>
</div>

<!-- Best Sellers Section -->
<div class="mb-5">
    <h2 class="text-center mb-3">Best Sellers</h2>
    <hr class="mb-4">

    <div class="row justify-content-center">
        @if (Model.Books.Count > 0)
        {
            foreach (var book in Model.Books)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <img src="@book.CoverImageUrl" class="card-img-top p-2" style="height: 300px; object-fit: contain;" alt="Book Cover" onerror="this.onerror=null;this.src='/images/default_c.jpg';">
                        <div class="card-body text-center">
                            <p class="card-text">@book.BookName</p>
                            <a asp-controller="Search" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-outline-primary">
                                View Details <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Check back here soon for a list of our top selling books!</p>
        }
    </div>
</div>

<!-- Wishlist Section -->
<div class="row align-items-center mb-5">
    <div class="col-md-6">
        <h2 class="mb-4">Wish List</h2>
        <p class="mb-4">
            Found a book that would be perfect for a friend? How about your parents or siblings or children?
            Want a book but don't want to buy it yet? The Bookstore now features a brand new wishlist!
            Start adding books to your wishlist today.
        </p>
        <div class="d-flex gap-3">
            <a class="btn btn-primary" asp-area="" asp-controller="Wishlist" asp-action="Index">Wish List</a>
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Search" asp-action="Index">Shop Books</a>
        </div>
    </div>
    <div class="col-md-6">
        <img src="/images/wishlist.jpg" class="img-fluid rounded" alt="Wishlist Image">
    </div>
</div>

<!-- Features Section -->
<div class="row mb-5">
    <div class="col-md-4 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="bi bi-cart text-warning mb-3" style="font-size: 2rem;"></i>
                <h5 class="card-title">Newest titles out there</h5>
                <h6 class="card-subtitle mb-3 text-muted">We're stocked up</h6>
                <p class="card-text text-muted">You can be sure that we have the latest books on shelf and are constantly adding new titles daily</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="bi bi-clock-history text-info mb-3" style="font-size: 2rem;"></i>
                <h5 class="card-title">Two week shipping</h5>
                <h6 class="card-subtitle mb-3 text-muted">Fast shipping guaranteed</h6>
                <p class="card-text text-muted">We guarantee your book will reach your hands to be read in two weeks or less, or your money back guaranteed</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="bi bi-chat-dots text-success mb-3" style="font-size: 2rem;"></i>
                <h5 class="card-title">Active support</h5>
                <h6 class="card-subtitle mb-3 text-muted">Our team is active</h6>
                <p class="card-text text-muted">Need helping picking a book? Confused on what genres are out there? We're available for all questions</p>
            </div>
        </div>
    </div>
</div>

<!-- Privacy Section -->
<div class="row align-items-center">
    <div class="col-md-6 mb-4">
        <img src="/images/privacy.jpg" class="img-fluid rounded" alt="Privacy Image">
    </div>
    <div class="col-md-6">
        <h2 class="mb-4">Our Privacy Policy</h2>
        <p class="mb-4">
            We know your information is important to you. That is why we take the utmost pride in the
            security of your information and the protection of your shopping information.
            If you wish to learn more about our privacy policy, check out our privacy policy page.
        </p>
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</div>
