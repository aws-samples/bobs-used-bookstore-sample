<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bob's Used Books</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet"  href="/css/site.css" />
</head>

<body class="d-flex flex-column min-vh-100">
    <partial name="_NavBarPartial" />

    <div class="container flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary text-white py-4 mt-5">
        <div class="container">
            <div class="row g-5">
                <div class="col-md-4">
                    <h4 class="mb-4 fw-bold">Address</h4>
                    <div class="text-light">
                        <p class="mb-2">123 Any Street, Any Town, USA</p>
                        <p class="mb-2">Call: 555-0100</p>
                        <p class="mb-2">Email: staff@BobsUsedBooks.com</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <h4 class="mb-4 fw-bold">Store Hours</h4>
                    <div class="text-light">
                        <p class="mb-2">Mon - Fri: 8am - 10pm</p>
                        <p class="mb-2">Saturday: 10am - 8pm</p>
                        <p class="mb-2">Sunday: 11am - 5pm</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <h4 class="mb-4 fw-bold">Navigation</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a class="text-light text-decoration-none hover-opacity-75" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-light text-decoration-none hover-opacity-75" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-light text-decoration-none hover-opacity-75" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-light text-decoration-none hover-opacity-75" asp-area="" asp-controller="Search" asp-action="Index">Search</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-light text-decoration-none hover-opacity-75" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Cart</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="border-top border-light mt-4 pt-4 text-center">
            &copy; <span id="year">@DateTime.Now.Year</span> - Bob's Used Books -
            <a class="text-light text-decoration-none hover-opacity-75" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("Scripts", false)
</body>
</html>
