@model Bookstore.Web.ViewModel.Search.SearchDetailsViewModel

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item h5"><a class="text-decoration-none" asp-action="Index">Search</a></li>
        <li class="breadcrumb-item h5 active" aria-current="page">Details</li>
    </ol>
</nav>

@if (Model == null)
{
    <div class="alert alert-warning">
        <h3 class="m-0">Book not found.</h3>
    </div>
}
else
{
    <div class="row">
        <!-- Book Image Column -->
        <div class="col-md-3 text-center mb-4 mb-md-0">
            <img class="img-fluid rounded shadow"
                 src="@Model.Url"
                 onerror="this.onerror=null;this.src='/images/default_c.jpg';"
                 alt="@Model.BookName"
                 style="max-height: 300px; width: auto;" />
        </div>

        <!-- Book Details Column -->
        <div class="col-md-9">
            <h1 class="mb-4">@Model.BookName</h1>

            <div class="row mb-4">
                <div class="col-sm-6">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th class="text-secondary" style="width: 30%">Author</th>
                                <td>@Model.Author</td>
                            </tr>
                            <tr>
                                <th class="text-secondary">Publisher</th>
                                <td>@Model.PublisherName</td>
                            </tr>
                            <tr>
                                <th class="text-secondary">Genre</th>
                                <td>@Model.GenreName</td>
                            </tr>
                            <tr>
                                <th class="text-secondary">Condition</th>
                                <td>@Model.ConditionName</td>
                            </tr>
                            <tr>
                                <th class="text-secondary">Price</th>
                                <td><span class="badge bg-primary fs-6">@Model.MinPrice.ToString("C")</span></td>
                            </tr>
                            <tr>
                                <th class="text-secondary">Overview</th>
                                @if (string.IsNullOrEmpty(Model.Summary))
                                {
                                    <td><span class="text-muted">No overview available.</span></td>
                                }
                                else
                                {
                                    <td>@Model.Summary</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex gap-2">
                <a class="btn btn-primary" asp-action="AddItemToShoppingCart" asp-route-bookid="@Model.BookId">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </a>
                <a class="btn btn-outline-primary" asp-action="AddItemToWishlist" asp-route-bookid="@Model.BookId">
                    <i class="bi bi-heart"></i> Add to Wishlist
                </a>
            </div>
        </div>
    </div>
}