@model Bookstore.Web.ViewModel.Checkout.CheckoutFinishedViewModel

<div class="container py-5">
    <!-- Success Message Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <div class="bg-success text-white p-4 rounded-3 mb-4">
                <i class="bi bi-check-circle" style="font-size: 3rem;"></i>
                <h1 class="mt-3">Order Placed Successfully!</h1>
                <p class="lead mb-0">Thank you for shopping at Bob's Used Books</p>
            </div>
        </div>
    </div>

    <!-- Order Summary Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width: 100px">Cover</th>
                                    <th>Title</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    var total = item.Price * item.Quantity;
                                    <tr>
                                        <td>
                                            <img src="@item.Url"
                                                 class="img-fluid rounded"
                                                 style="width: 50px; height: 75px; object-fit: cover;"
                                                 onerror="this.onerror=null;this.src='/images/default_c.jpg';"
                                                 alt="@item.Bookname cover" />
                                        </td>
                                        <td>@item.Bookname</td>
                                        <td class="text-end">@item.Price.ToString("C")</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@total.ToString("C")</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="4" class="text-end fw-bold">Order Total:</td>
                                    <td class="text-end fw-bold">@Model.Items.Sum(i => i.Price * i.Quantity).ToString("C")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-clock-history me-2"></i>View Orders
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>