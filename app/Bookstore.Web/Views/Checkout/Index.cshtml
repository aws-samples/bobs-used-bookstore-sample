@model Bookstore.Web.ViewModel.Checkout.CheckoutIndexViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item h5"><a class="text-decoration-none" asp-action="Index" asp-controller="ShoppingCart">Shopping Cart</a></li>
        <li class="breadcrumb-item h5 active" aria-current="page">Checkout</li>
    </ol>
</nav>

<form method="post">
    <div class="row">
        <!-- Left Column - Address Selection -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Select Delivery Address</h4>
                        <a asp-action="Create" asp-controller="Address" asp-route-returnUrl="@Url.Action()"
                           class="btn btn-outline-primary">
                            <i class="bi bi-plus-circle me-2"></i>Add New Address
                        </a>
                    </div>

                    @if (Model.Addresses.Any())
                    {
                        foreach (var address in Model.Addresses)
                        {
                            <div class="card mb-3 @(Model.SelectedAddressId == address.Id ? "border-primary" : "")">
                                <div class="card-body">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio"
                                               asp-for="@Model.SelectedAddressId"
                                               value="@address.Id"
                                               id="address_@address.Id">
                                        <label class="form-check-label" for="address_@address.Id">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <p class="mb-1">@address.AddressLine1</p>
                                                    @if (!string.IsNullOrEmpty(address.AddressLine2))
                                                    {
                                                        <p class="mb-1">@address.AddressLine2</p>
                                                    }
                                                    <p class="mb-1">@address.City, @address.State @address.ZipCode</p>
                                                    <p class="mb-0">@address.Country</p>
                                                </div>
                                                <a asp-action="Update" asp-controller="Address"
                                                   asp-route-id="@address.Id"
                                                   asp-route-returnUrl="@Url.Action()"
                                                   class="btn btn-link">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-geo-alt" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">No Addresses Found</h5>
                            <p class="text-muted">Please add a delivery address to continue.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Order Summary -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">Order Summary</h4>

                    <!-- Order Items -->
                    @foreach (var item in Model.ShoppingCartItems)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <img src="@item.ImageUrl"
                                 onerror="this.onerror=null;this.src='/images/default_c.jpg';"
                                 class="img-fluid rounded"
                                 style="width: 50px; height: 75px; object-fit: cover;" />

                            <div class="ms-3 flex-grow-1">
                                <p class="mb-0 @(item.OutOfStock ? "text-danger" : "")">@item.BookName</p>
                                <p class="text-muted mb-0">
                                    <small>@item.Price.ToString("C")</small>
                                </p>
                                @if (item.OutOfStock)
                                {
                                    <small class="text-danger">Out of stock</small>
                                }
                            </div>
                        </div>
                    }

                    <hr>

                    <!-- Total -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span>Total</span>
                        <span class="h4 mb-0">@Model.Total.ToString("C")</span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100"
                    @(Model.Addresses.Any() ? "" : "disabled")>
                        Complete Order
                    </button>

                    @if (!Model.Addresses.Any())
                    {
                        <div class="text-center mt-3">
                            <small class="text-danger">Please add an address to complete your order</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>
