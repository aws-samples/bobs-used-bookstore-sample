@model Bookstore.Web.ViewModel.Address.AddressIndexViewModel

@{
    ViewData["Title"] = "My Addresses";
}

<partial name="_Notification" />

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Address List</h2>
        <a class="btn btn-primary" asp-action="Create" asp-route-returnUrl="@Url.Action()">
            <i class="bi bi-plus-lg me-2"></i>Add New Address
        </a>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-geo-alt" style="font-size: 3rem; color: #95a5a6;"></i>
            <h3 class="mt-3">No addresses found</h3>
            <p class="text-muted">Add a new address to get started!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model.Items)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title mb-3">
                                        <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                                        @item.AddressLine1
                                    </h5>
                                    @if (!string.IsNullOrEmpty(item.AddressLine2))
                                    {
                                        <p class="card-text mb-1">@item.AddressLine2</p>
                                    }
                                    <p class="card-text mb-1">@item.City, @item.State @item.ZipCode</p>
                                    <p class="card-text">@item.Country</p>
                                </div>
                                <div>
                                    <div class="btn-group">
                                        <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id" asp-route-returnUrl="@Url.Action()">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-addressid="@item.Id">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="confirmDeleteModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this address? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <form method="post">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button id="confirmDeleteButton" type="submit" class="btn btn-danger" asp-action="Delete">
                        Delete Address
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#confirmDeleteModal').on('show.bs.modal', function (event) {
                var modal = $(this);
                var formAction = modal.find('#confirmDeleteButton').attr("formaction");
                var addressId = $(event.relatedTarget).data('addressid');
                modal.find('#confirmDeleteButton').attr("formaction", formAction + "?id=" + addressId);
            });
        });
    </script>
}